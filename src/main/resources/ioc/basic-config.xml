<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="com.whizlabs.spring.basics.ioc.containerandbean.Address">
        <!-- collaborators and configuration for this bean go here -->
        <constructor-arg index="0" value="100"/>
        <constructor-arg index="1" value="High Street"/>
    </bean>

    <bean id="person" class="com.whizlabs.spring.basics.ioc.containerandbean.Person">
        <!-- collaborators and configuration for this bean go here -->
        <property name="fullName" value="John Doe"/>
        <property name="address" ref="address"/>
    </bean>

    <!-- more bean definitions go here -->

</beans>