<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="name" class="com.whizlabs.spring.basics.ioc.data.Name">
        <constructor-arg index="0" value="John"/>
        <constructor-arg index="1" value="Doe"/>
    </bean>

    <bean id="address" class="com.whizlabs.spring.basics.ioc.data.Address">
        <constructor-arg index="0" value="100"/>
        <constructor-arg index="1" value="High Street"/>
    </bean>

    <bean class="com.whizlabs.spring.basics.ioc.data.Person">
        <constructor-arg index="0" ref="name"/>
        <constructor-arg index="1" ref="address"/>
    </bean>
</beans>